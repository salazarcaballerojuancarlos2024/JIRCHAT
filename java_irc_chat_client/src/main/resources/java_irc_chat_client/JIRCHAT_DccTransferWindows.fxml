<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dcc.DccTransferController">
   <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" prefHeight="230.0" prefWidth="480.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
      <children>
         <Label text="Solicitud de Transferencia de Archivo (DCC)" textFill="#148f77">
            <font>
               <Font name="System Bold" size="16.0" />
            </font>
         </Label>
         <Label fx:id="fileInfoLabel" alignment="CENTER" contentDisplay="CENTER" text="Archivo: [Nombre Archivo]&#10;Remitente: [Nick]&#10;Tamaño: [Tamaño]" textAlignment="CENTER">
            <font>
               <Font size="13.0" />
            </font>
         </Label>
         <Label fx:id="limitLabel" text="Máximo permitido: 5.0 MB" textFill="#e74c3c" />
         <VBox spacing="5.0">
            <children>
               <Label text="Guardar en:" />
               <HBox spacing="5.0">
                  <children>
                     <TextField fx:id="filePathField" editable="false" HBox.hgrow="ALWAYS" />
                     <Button fx:id="btnChoosePath" mnemonicParsing="false" onAction="#handleChoosePath" text="Cambiar Ruta" />
                  </children>
               </HBox>
            </children>
         </VBox>
         <ProgressBar fx:id="progressBarRx" prefWidth="480.0" progress="0.0" />
         <HBox alignment="CENTER" spacing="20.0">
            <children>
               <Button fx:id="denyButton" mnemonicParsing="false" onAction="#handleDeny" prefWidth="100.0" style="-fx-background-color: #e74c3c;" text="Denegar" textFill="WHITE">
                  <font>
                     <Font name="System Bold" size="12.0" />
                  </font>
               </Button>
               <Button fx:id="acceptButton" mnemonicParsing="false" onAction="#handleAccept" prefWidth="100.0" style="-fx-background-color: #2ecc71;" text="Aceptar" textFill="WHITE">
                  <font>
                     <Font name="System Bold" size="12.0" />
                  </font>
               </Button>
            </children>
            <padding>
               <Insets top="10.0" />
            </padding>
         </HBox>
      </children>
   </VBox>
</AnchorPane>